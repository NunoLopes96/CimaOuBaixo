<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.nuno.updown.GameBoardActivity"
    android:background="@color/material_blue_grey_950">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/linlayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:weightSum="4">


            <Button
                android:id="@+id/botao1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="Cima"
                android:background="@drawable/buttonshape1"
                android:layout_weight="1"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/carta1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:text="@string/carta1"
                android:textColor="@android:color/background_light"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/carta6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:text="\?\?\?\?\?\?\?"
                android:textColor="@android:color/background_light"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="25sp" />

            <Button
                android:id="@+id/botao6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="Baixo"
                android:background="@drawable/buttonshape1"
                android:layout_weight="1"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linlayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/linlayout1"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:id="@+id/botao2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/buttonshape1"
                android:visibility="invisible"
                android:layout_margin="5dp"
                android:text="     "
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/carta2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Carta 2"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:textColor="@android:color/background_light"
                android:layout_weight="1"
